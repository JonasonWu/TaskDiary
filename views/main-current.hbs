<!-- This form adds a new task -->
<form method="POST" action="/main/current/newTask">
<p>Create New Task</p>
<input placeholder="Task Name" type="text" name="title">
<input placeholder="Detail 1" type="text" name="detail1">
<input placeholder="Detail 2" type="text" name="detail2">
<input placeholder="Detail 3" type="text" name="detail3">
<input placeholder="Detail 4" type="text" name="detail4">
<input placeholder="Detail 5" type="text" name="detail5">
<input type="submit" value="Create">
</form>

<!--This form moves all tasks to the completed tasks section-->
<form method="POST" action="/main/current/moveALL">
    Move all tasks to be completed.
    <input type="hidden" name="delete" value="true">
    <input type="submit" value="All tasks completed">
</form>
{{/if}}