{{else}}
<h2>Today's Tasks</h2>

{{#if noData}}
    No Current Tasks! Good job!
{{/if}}

<ol>
{{#each data as |d|}}
    {{!-- <input type="checkbox" name={{d.user}}> --}}
        <li>
            {{d.title}} 
            <ul>
                {{#each d.taskDetails as |td|}}
                <li>
                    {{td}}
                </li>
                {{/each}}
            </ul>
        </li>
{{/each}}
</ol>

