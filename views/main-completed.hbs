{{#if user}}

<h2>Completed Tasks</h1>

{{#if noData}}
    No Completed Tasks!
{{/if}}

<ol> 
{{#each data as |d|}}
    <li>
        {{d.title}} 
        <ul>
            {{#each d.taskDetails as |td|}}
            <li>
                {{td}}
            </li>
            {{/each}}
        </ul>
    </li>
{{/each}}
</ol>

<form method="POST" action="">
    Do you want to remove all tasks?
    <input type="hidden" name="delete" value="true">
    <input type="submit" value="DELETE ALL TASKS">
</form>

{{else}}
    <a href="/login">Login</a> or <a href="/register">Register</a>
{{/if}}